---
const pathname = new URL(Astro.request.url).pathname;
const path = pathname.slice(1);
import { Button } from "./react";
---

<header class="header">
    <h1 class="logo">Izzisistem</h1>
    <nav class="nav">
        <a class={path === "" ? "active" : ""} href="/">Inicio</a>
        <a class={path === "about" ? "active" : ""} href="/about">Acerca de</a>
        <a class={path === "services" ? "active" : ""} href="/services">Servicios</a>
        <a class={path === "technologies" ? "active" : ""} href="/technologies">Tecnologias</a>
        <a class={path === "contact" ? "active" : ""} href="/contact">Contactanos</a>
      </nav>
      
    <Button client:idle/>
</header>

<style>
    .header{
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        align-items: center;
        height: 10vh;
    }
    .logo{
        font-size: xx-large;
        font-weight: 600;
    }
 
    .nav{
        display: none;
      
    }

    .button{
        display: flex;
        background-color: transparent;   

    }

    .active{
        border-bottom: 3px solid #000;
        font-weight: 600;
    }

    @media (min-width:1280px) {
        .header{
            padding: 0 15%;
        }

        .nav{
            display: flex;
            gap: 1.5rem;
        }

        .wrapButton{
            display:none;
        }
       
    }
</style>